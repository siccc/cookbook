datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native"]
  previewFeatures = ["fullTextSearch", "fullTextIndex", "extendedWhereUnique"]
}

model Recipe {
  id              Int             @id @default(autoincrement())
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  title           String
  cookedCount     Int             @default(0)
  servings        String
  prepTime        Int?
  cookTime        Int?
  ingredients     String          @db.LongText
  steps           String          @db.LongText
  notes           String          @db.LongText
  category        String
  tags            Tag[]
  imageName       String          @default("")
  imagePublicId   String          @default("")
  userId          String          @default("")

  @@fulltext([title])
}

model Tag {
  id      String                  @id @unique
  name    String
  userId  String
  recipes Recipe[]
}

model User {
  id              String          @id @unique
  createdAt       DateTime        @default(now())
}

model ShoppingList {
  id              String          @id @unique
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  name            String          @default("Shopping List")
  items           Json            @default("[]")
  userId          String
}