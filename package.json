{
  "name": "cookbook-app",
  "version": "0.0.0",
  "author": "Sarolta Nagy",
  "description": "Cookbook is an easy-to-use recipe app, the digital version of your treasured family recipe book.",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "vdev": "vercel dev --local-config ./vercel-dev.json",
    "build": "run-p type-check build-only prisma:generate",
    "preview": "vite preview --port 4173",
    "test:unit": "vitest --environment jsdom",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prisma:generate": "prisma generate"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@cloudinary/url-gen": "^1.8.6",
    "@codemirror/lang-markdown": "^6.0.3",
    "@formkit/auto-animate": "^1.0.0-beta.6",
    "@types/dompurify": "^2.3.4",
    "@vueuse/core": "^9.5.0",
    "cloudinary": "^1.32.0",
    "codemirror": "^6.0.1",
    "cross-fetch": "^3.1.5",
    "dompurify": "^2.4.0",
    "lodash": "^4.17.21",
    "vue": "3.2.40",
    "vue-codemirror": "^6.1.1",
    "vue-query": "1.26.0",
    "vue-recaptcha": "^2.0.3",
    "vue-router": "4.1.5",
    "vue3-markdown-it": "^1.0.10"
  },
  "devDependencies": {
    "@prisma/client": "4.7.0",
    "@rushstack/eslint-patch": "1.2.0",
    "@tailwindcss/typography": "^0.5.7",
    "@types/jsdom": "20.0.0",
    "@types/lodash": "^4.14.187",
    "@types/node": "16.11.56",
    "@vercel/node": "2.5.22",
    "@vitejs/plugin-vue": "3.1.2",
    "@vue/eslint-config-typescript": "11.0.2",
    "@vue/test-utils": "2.1.0",
    "@vue/tsconfig": "0.1.3",
    "autoprefixer": "10.4.12",
    "eslint": "8.25.0",
    "eslint-plugin-vue": "9.6.0",
    "jsdom": "20.0.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.17",
    "prisma": "4.7.0",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.4",
    "vercel": "28.4.8",
    "vite": "3.1.6",
    "vite-svg-loader": "^3.6.0",
    "vitest": "0.24.0",
    "vue-tsc": "1.0.3"
  },
  "overrides": {
    "@vercel/node": {
      "ts-node": "10.9.1",
      "typescript": "4.8.4"
    }
  }
}
